= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :description
  = f.input :status
  = f.input :email_petitioner
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), reservations_path, :class => 'btn'
