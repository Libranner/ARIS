- model_class = Area
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @area.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @area.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), areas_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_area_path(@area), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), area_path(@area), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
