- model_class = Building
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:abbreviation)
      %th= model_class.human_attribute_name(:rooms)
      %th= model_class.human_attribute_name(:floors)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @buildings.each do |building|
      %tr
        %td= link_to building.id, building_path(building)
        %td= building.name
        %td= building.abbreviation
        %td= building.rooms
        %td= building.floors
        %td=l building.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_building_path(building), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), building_path(building), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_building_path, :class => 'btn btn-primary'
