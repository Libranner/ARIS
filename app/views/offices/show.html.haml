- model_class = Office
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @office.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @office.description
%p
  %strong= model_class.human_attribute_name(:open_at) + ':'
  %br
  = @office.open_at
%p
  %strong= model_class.human_attribute_name(:close_at) + ':'
  %br
  = @office.close_at
%p
  %strong= model_class.human_attribute_name(:building_id) + ':'
  %br
  = @office.building.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), offices_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_office_path(@office), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), office_path(@office), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
