- model_class = Classroom
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:available_from)
      %th= model_class.human_attribute_name(:available_until)
      %th= model_class.human_attribute_name(:sits)
      %th= model_class.human_attribute_name(:building_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @classrooms.each do |classroom|
      %tr
        %td= link_to classroom.id, classroom_path(classroom)
        %td= classroom.name
        %td= classroom.available_from
        %td= classroom.available_until
        %td= classroom.sits
        %td= classroom.building.name
        %td=l classroom.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_classroom_path(classroom), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), classroom_path(classroom), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_classroom_path, :class => 'btn btn-primary'
