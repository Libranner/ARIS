= simple_form_for @classroom, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :available_from
  = f.input :available_until
  = f.input :sits
  = f.association :building
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), classrooms_path, :class => 'btn'
